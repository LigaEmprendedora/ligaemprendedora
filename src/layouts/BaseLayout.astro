---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Liga Emprendedora | Escuela de emprendimiento online con metáforas de fútbol",
  description = "Liga Emprendedora es una escuela de emprendimiento online que conecta el fútbol con los negocios para ayudarte a lanzar tu proyecto en 90 días.",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favico.png" />
    <link rel="shortcut icon" href="/favico.png" />
  </head>
  <body class="bg-white text-gray-900 antialiased">
    <slot />
    <script is:inline>
      document.addEventListener("DOMContentLoaded", () => {
        const SCRIPT_URL =
          "https://script.google.com/macros/s/AKfycbz4BZPlvEa1-78yTjp6nBdGH9-UCP02lK2VRrFUA7iSX4It2ODw6nR0_TsMmxabTD52tg/exec"; // tu URL aquí

        // Selecciona todos los formularios que quieras enviar a Google Sheets
        const forms = document.querySelectorAll("form[name]");

        forms.forEach((form) => {
          form.addEventListener("submit", (event) => {
            // NO bloqueamos el envío a Netlify, solo mandamos una copia
            try {
              const formData = new FormData(form);

              // Enviar a Google Apps Script (modo no-cors para evitar líos)
              fetch(SCRIPT_URL, {
                method: "POST",
                mode: "no-cors",
                body: formData,
              });
            } catch (err) {
              console.error("Error enviando a Google Sheets:", err);
            }
            // Importante: no hacemos preventDefault, así Netlify sigue recibiendo el formulario
          });
        });
      });
    </script>
  </body>
</html>
