---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { getCollection, type CollectionEntry } from "astro:content";

type NewsletterEntry = CollectionEntry<"newsletter">;

const entries = await getCollection("newsletter");

const posts = entries
  .map((entry: NewsletterEntry) => ({
    slug: entry.slug,
    title: entry.data.title,
    description: entry.data.description,
    category: entry.data.category,
    date: entry.data.date,
    image: entry.data.image,
  }))
  .sort((a: any, b: any) =>
    a.date && b.date && a.date < b.date ? 1 : -1
  );
---

<BaseLayout
  title="Newsletter | Liga Emprendedora"
  description="Artículos sobre emprendimiento, PYMEs, IA y estrategia para jugar en serio el partido de los negocios."
>
  <div class="flex min-h-screen flex-col bg-[#f4f6fa]">
    <Header />

    <main class="flex-1">
      <!-- Hero newsletter -->
      <section class="px-4 py-16 md:px-6">
        <div class="mx-auto grid max-w-5xl gap-10 md:grid-cols-[1.2fr,1fr] md:items-center">
          <div>
            <p class="text-xs font-semibold uppercase tracking-[0.25em] text-[#e3412b]">
              Newsletter · Liga Emprendedora
            </p>
            <h1 class="mt-2 text-3xl md:text-4xl font-extrabold leading-tight text-[#111827]">
              Tu jugada maestra semanal<br />para ganar en el emprendimiento
            </h1>
            <p class="mt-4 text-sm md:text-base text-[#4b5563] max-w-xl">
              Contexto económico real, tácticas con inteligencia artificial y ejemplos accionables
              para que tu negocio deje de ver el partido y salga a jugarlo.
            </p>

            <!-- Formulario (luego lo conectas a tu backend) -->
            <form class="mt-6 flex flex-col gap-3 sm:flex-row sm:items-center">
              <input
                type="email"
                placeholder="Tu correo electrónico"
                class="w-full rounded-full border border-[#e5e7eb] bg-white px-4 py-2.5 text-sm outline-none focus:border-[#e3412b]"
                required
              />
              <button
                type="submit"
                class="inline-flex items-center justify-center rounded-full bg-[#e3412b] px-6 py-2.5 text-sm font-semibold text-white shadow-sm transition hover:bg-[#c23a26]"
              >
                Suscribirme
              </button>
            </form>

            <p class="mt-2 text-xs text-[#6b7280]">
              Sin humo. Sin spam. Solo jugadas claras para PYMEs y emprendedores de LATAM.
            </p>
          </div>

          <div class="flex justify-center md:justify-end">
            <div class="h-64 w-full max-w-sm overflow-hidden rounded-3xl bg-[#111827]">
              <img
                src="/images/newsletter/cancha-newsletter.webp"
                alt="Cancha de fútbol iluminada"
                class="h-full w-full object-cover"
                loading="lazy"
              />
            </div>
          </div>
        </div>
      </section>

      <!-- Listado de artículos -->
      <section class="px-4 pb-20 md:px-6">
        <div class="mx-auto max-w-5xl rounded-3xl bg-white px-6 py-8 shadow-sm">
          <div class="flex items-center justify-between gap-4">
            <div>
              <h2 class="text-xl md:text-2xl font-extrabold text-[#111827]">
                Últimas jugadas publicadas
              </h2>
              <p class="mt-1 text-sm text-[#6b7280]">
                Explora nuestros análisis sobre economía, IA y tácticas para PYMEs en Colombia.
              </p>
            </div>
          </div>

          <div class="mt-8 grid gap-6 md:grid-cols-3">
            {posts.map((post: any) => (
              <article class="flex flex-col overflow-hidden rounded-3xl border border-[#e5e7eb] bg-[#f9fafb] shadow-sm">
                {post.image && (
                  <img
                    src={post.image}
                    alt={post.title}
                    class="h-32 w-full object-cover"
                    loading="lazy"
                  />
                )}

                <div class="flex flex-1 flex-col px-4 py-4">
                  {post.category && (
                    <span class="text-[11px] font-semibold uppercase tracking-[0.18em] text-[#f97316]">
                      {post.category}
                    </span>
                  )}
                  <h3 class="mt-2 text-sm font-bold text-[#111827] leading-snug">
                    <a href={`/newsletter/${post.slug}`} class="hover:text-[#e3412b]">
                      {post.title}
                    </a>
                  </h3>
                  {post.description && (
                    <p class="mt-2 line-clamp-3 text-xs text-[#6b7280]">
                      {post.description}
                    </p>
                  )}
                  <a
                    href={`/newsletter/${post.slug}`}
                    class="mt-4 inline-flex items-center text-xs font-semibold text-[#e3412b] hover:text-[#c23a26]"
                  >
                    Leer artículo →
                  </a>
                </div>
              </article>
            ))}
          </div>
        </div>
      </section>
    </main>

    <Footer />
  </div>
</BaseLayout>
