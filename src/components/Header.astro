---
const navItems = [
  { href: "/", label: "Home" },
  { href: "/quienes-somos", label: "Quiénes Somos" },
  { href: "/comunidad", label: "Comunidad" },
  { href: "/recursos", label: "Recursos" },
  { href: "/blog", label: "Blog / Newsletter" },
];
---

<header class="border-b border-gray-100 bg-[#f4f6fa] backdrop-blur">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-4 md:px-6">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-2">
      <!-- Reemplaza por tu logo real en /public -->
      <img 
  src="/Logo_liga.png" 
  alt="Logo Liga Emprendedora"
  class="h-20 w-auto"
/>
    </a>

    <!-- Desktop nav -->
    <nav class="hidden items-center gap-6 text-sm font-medium text-gray-700 md:flex">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="transition hover:text-gray-900"
        >
          {item.label}
        </a>
      ))}

      <a
        href="/unete"
        class="rounded-full bg-yellow-400 px-4 py-2 text-sm font-semibold text-gray-900 shadow-sm transition hover:bg-yellow-300"
      >
        Únete
      </a>
    </nav>

    <!-- Mobile menu button -->
    <details class="relative md:hidden">
      <summary class="list-none cursor-pointer rounded-full border border-gray-200 p-2">
        <span class="sr-only">Abrir menú</span>
        <div class="space-y-1">
          <span class="block h-0.5 w-5 bg-gray-800"></span>
          <span class="block h-0.5 w-5 bg-gray-800"></span>
          <span class="block h-0.5 w-5 bg-gray-800"></span>
        </div>
      </summary>
      <div class="absolute right-0 mt-3 w-56 rounded-xl border border-gray-100 bg-white p-3 shadow-lg">
        <nav class="flex flex-col gap-2 text-sm font-medium text-gray-700">
          {navItems.map((item) => (
            <a
              href={item.href}
              class="rounded-lg px-3 py-2 transition hover:bg-gray-50"
            >
              {item.label}
            </a>
          ))}
          <a
            href="/unete"
            class="mt-1 rounded-full bg-yellow-400 px-3 py-2 text-center text-sm font-semibold text-gray-900 shadow-sm transition hover:bg-yellow-300"
          >
            Únete
          </a>
        </nav>
      </div>
    </details>
  </div>
</header>
